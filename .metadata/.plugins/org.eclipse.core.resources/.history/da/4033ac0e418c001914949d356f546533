package Calculator.Mike2;

import java.awt.*;

public class Calc {

	public static void main(String[] args) {
		Frame f = new Frame("Calculator!");
		Panel p1 = new Panel();
		Panel p2 = new Panel();
		GridLayout g = new GridLayout(4,4);
		TextField t = new TextField(20);
		p1.add(t);
		p2.setLayout(g);
		Button b0 = new Button("0");
		Button b1 = new Button("1");
		Button b2 = new Button("2");
		Button b3 = new Button("3");
		Button b4 = new Button("4");
		Button b5 = new Button("5");
		Button b6 = new Button("6");
		Button b7 = new Button("7");
		Button b8 = new Button("8");
		Button b9 = new Button("9");
		Button bAdd = new Button("+");
		Button bSub = new Button("-");
		Button bDiv = new Button("/");
		Button bMul = new Button("x");
		Button bClr = new Button("c");
		Button bEql = new Button("=");
		p2.add(bAdd);
		p2.add(b7);
		p2.add(b8);
		p2.add(b9);
		p2.add(bSub);
		p2.add(b4);
		p2.add(b5);
		p2.add(b6);
		p2.add(bDiv);
		p2.add(b1);
		p2.add(b2);
		p2.add(b3);
		p2.add(bMul);
		p2.add(bClr);
		p2.add(b0);
		p2.add(bEql);
		bEql.setBackground(Color.green);
		bClr.setBackground(Color.red);
		f.add(p1,BorderLayout.NORTH);
		f.add(p2,BorderLayout.CENTER);
		f.setSize(300,400);
		f.setVisible(true);
		NumberListener numListen = new NumberListener(t);
		b0.addActionListener(numListen);
		b1.addActionListener(numListen);
		b2.addActionListener(numListen);
		b3.addActionListener(numListen);
		b4.addActionListener(numListen);
		b5.addActionListener(numListen);
		b6.addActionListener(numListen);
		b7.addActionListener(numListen);
		b8.addActionListener(numListen);
		b9.addActionListener(numListen);
		OperationListener opListen = new OperationListener(t);
		bAdd.addActionListener(opListen);
		bSub.addActionListener(opListen);
		bDiv.addActionListener(opListen);
		bMul.addActionListener(opListen);
		bClr.addActionListener(opListen);
		bEql.addActionListener(opListen);
		
	}

}
