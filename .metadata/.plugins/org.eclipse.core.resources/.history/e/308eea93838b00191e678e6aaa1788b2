package Nationwide.Mike;
import java.awt.*;

public class Calc {

	public static void main(String[] args) {
		Frame f = new Frame("Calculator");
		TextField t1,t2,t3;
		Label l1,l2,l3;
		Button b1 = new Button("Add");
		l1 = new Label("First no: ");
		l2= new Label("Second no: ");
		l3 = new Label("Result: ");
		t1 = new TextField(10);
		t2 = new TextField(10);
		t3 = new TextField(10);
		FlowLayout flow = new FlowLayout();
		f.setLayout(flow);
		Ehandler e = new Ehandler(t1,t2,t3);
		b1.addActionListener(e);
		f.add(l1);
		f.add(t1);
		f.add(l2);
		f.add(t2);
		f.add(b1);
		f.add(l3);
		f.add(t3);
		f.setSize(400,400);
		f.setVisible(true);
	}

}
